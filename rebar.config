{deps, [
	{lager, "3.8.0"}
]}.
{plugins, [pc]}.
{provider_hooks, [
	{pre, [{compile, {pc, compile}}, {clean, {pc, clean}}]}
]}.
{erl_opts, [{parse_transform, lager_transform}]}.
{port_env, [
	{"CFLAGS", "$CFLAGS -Werror -O2 -g"},
	{"LDFLAGS", "$LDFLAGS"}
]}.
{port_specs, [
	{"priv/rle_nif.so", [
		"c_src/rle.c",
		"c_src/bitmap_encode.c",
		"c_src/bitmap_decode.c"]}
]}.
