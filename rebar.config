{deps, [
	{lager, "3.9.2"},
	{kerlberos, "1.1.3"},
	{msrpce, "0.1.0"},
	{apdu, "0.2.0"}
]}.
{plugins, [pc]}.
{provider_hooks, [
	{pre, [{compile, {pc, compile}}, {clean, {pc, clean}}]}
]}.
{port_env, [
	{"CFLAGS", "$CFLAGS -Werror -O2 -g"},
	{"LDFLAGS", "$LDFLAGS"}
]}.
{port_specs, [
	{"priv/rle_nif.so", [
		"c_src/rle.c",
		"c_src/bitmap_encode.c",
		"c_src/bitmap_decode.c"]}
]}.

{shell, [
	{config, "config/shell.config"},
	{apps, [rdp_proto, lager]}
]}.
